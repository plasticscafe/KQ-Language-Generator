		<![endif]-->
		<style type="text/css">
		<!--
			body { padding-top:70px; }
			.container { width:600px;}
			.container textarea { width:100%; height:50px;}
			.result textarea { height:300px;color:#333333; }
			.container div.input { margin:10px auto; }
			.container div.input li { height:2em;border-bottom:1px dotted #dddddd; }
			div.button_area { text-align:right; }
